{
    "name": "@nodescript/protocomm",
    "version": "0.5.1",
    "type": "module",
    "description": "Bi-directional transport-agnostic JSON-based messaging",
    "exports": {
        ".": "./out/main/index.js"
    },
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "run-s clean dev:ts",
        "dev:ts": "tsc -b -w",
        "compile": "run-s compile:*",
        "compile:ts": "tsc -b",
        "lint": "eslint --ext=.js,.ts --cache .",
        "test": "NODE_ENV=test mocha",
        "test:dev": "nodemon --config nodemon.test.json",
        "preversion": "npm run lint",
        "version": "run-s compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "engines": {
        "node": ">=18"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "@nodescript/event": "^2.1.1",
        "@nodescript/exception": "^2.0.8",
        "@nodescript/schema": "^5.2.2"
    },
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.35",
        "eslint": "^8.24.0",
        "mocha": "^10.0.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.7.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nodescript/protocomm.git"
    },
    "keywords": [
        "protocol"
    ],
    "author": "UBIO",
    "license": "ISC",
    "homepage": "https://github.com/nodescript/protocomm#readme"
}
