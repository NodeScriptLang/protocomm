{
    "name": "@flexent/protocomm",
    "version": "0.2.1",
    "type": "module",
    "description": "Bi-directional transport-agnostic JSON-based messaging",
    "exports": {
        ".": "./out/main/index.js"
    },
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "run-s clean dev:ts",
        "dev:ts": "tsc -b -w",
        "compile": "run-s compile:*",
        "compile:ts": "tsc -b",
        "lint": "eslint --ext=.js,.ts --cache .",
        "test": "NODE_ENV=test mocha",
        "test:dev": "nodemon --config nodemon.test.json",
        "preversion": "npm run lint",
        "version": "run-s compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "engines": {
        "node": ">=18"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "@flexent/event": "^2.0.5",
        "@flexent/exception": "^2.0.6",
        "airtight": "^4.2.0"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.35",
        "@ubio/eslint-config": "^1.3.5",
        "eslint": "^7.32.0",
        "mocha": "^10.0.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.7.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flexent/protocomm.git"
    },
    "keywords": [
        "protocol"
    ],
    "author": "UBIO",
    "license": "ISC",
    "homepage": "https://github.com/flexent/protocomm#readme"
}
